<!DOCTYPE html>
<html>
  <head>
    <title>Conekta</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script type="text/javascript" src="https://conektaapi.s3.amazonaws.com/v0.3.2/js/conekta.js">
    </script>
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js">
	</script>
	<script type="text/javascript">
    	// Conekta Public Key
    	Conekta.setPublishableKey('<%= Rails.application.secrets.conekta_public %>');
  	</script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
